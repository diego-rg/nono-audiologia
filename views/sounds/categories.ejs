<% layout("layouts/boilerplate") %>
<div class="card m-auto" style="width: 18rem;">
    <div class="card-header">Categor√≠as</div>
    <ul class="list-group list-group-flush">
        <% for(let categ of categs) { %>
            <li class="list-group-item"><a class="link-success" href="/sounds/<%= categ %>">
                <% function capitalizeFirstLetter(string) { %>
                <%    return string.charAt(0).toUpperCase() + string.slice(1); %>
                <%  } %>
                <%= capitalizeFirstLetter(categ) %>
            </a></li>
        <% }  %>
    </ul>
    <div class="card-footer">
        <a class="link-success" href="/sounds">Todos</a>
        <a class="link-success" href="/sounds/new">Crear</a>
    </div>
</div>