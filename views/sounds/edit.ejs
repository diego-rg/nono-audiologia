<% layout("layouts/boilerplate") %> 
<h1>Edita un sonido</h1>
<form action="/sounds/show/<%=sound._id%>?_method=PUT" method="POST"><!--Para usar DELETE EDIT con method override-->
    <div>
        <label for="name">Nombre:</label>
        <input type="text" id="name" placeholder="Sonido" name="sound[name]" required value="<%= sound.name %>">
    </div>
    <div>
        <label for="minFrec">Frecuencia mínima:</label>
        <input type="numer" id="minFrec" placeholder="dB" name="sound[minFrec]" required value="<%= sound.minFrec %>">
    </div>
    <div>
        <label for="maxFrec">Frecuencia máxima:</label>
        <input type="number" id="maxFrec" placeholder="dB" name="sound[maxFrec]" required value="<%= sound.maxFrec %>">
    </div>
    <div>
        <label for="minInt">Intensidad mínima:</label>
        <input type="number" id="minInt" placeholder="Hz" name="sound[minInt]" required value="<%= sound.minInt %>">
    </div>
    <div>
        <label for="maxInt">Intensidad máxima:</label>
        <input type="number" id="maxInt" placeholder="Hz" name="sound[maxInt]" required value="<%= sound.maxInt %>">
    </div>
    <div>
        <label for="category">Categoría:</label>
        <select id="category" name="sound[category]" required>           
            <% for(c = 0; c < Categories.length; c++) { %>
                <option value="<%= Categories[c] %>"><%= Categories[c] %></option>
            <% } %>
        </select>
    </div>
    <button type="submit">Guardar</button>
    <button type="reset">Limpiar</button>
</form>
<a href="/sounds/show/<%= sound._id %> ">Atrás</a>