<% layout("layouts/boilerplate") %>

<!--Search form-->
<form class="row g-3 m-auto p-lg-5 py-4" action="/sounds/search/" method="GET">
  <div class="col-auto">
    <input type="text" class="form-control" name="name" id="name" placeholder="Nombre del sonido">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-success">Buscar</button>
  </div>
</form>

<div class="d-flex flex-column justify-content-center abutton gn-items-center py-lg-5">
    <div class="row row-cols-auto justify-content-center abutton gn-items-center">

      <!--Loop para ver cards de todos os sons da DB-->
      <% for(let sound of sounds) { %>
        <div class="col">
          <div class="card mb-3 text-center" style="width: 9rem">
            <img src="<%= sound.image.url %>" class="card-img-top" crossorigin="anonymous" alt="Foto de: <%= sound.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= sound.name %></h5>
              <a href="/sounds/categories/<%=sound.category%>/<%= sound._id %>" class="btn btn-success">Ver datos</a>
            </div>
          </div>
        </div>
      <% }  %>
    </div>

    <!--Paxinación-->
    <% if (pages > 0) { %>
      <div class="row align-items-center justify-content-evenly p-3">
        <div class="text-center">
          <!--Botón primero: Activo se a páxina actual é maior de 1-->
          <% if (current == 1) { %>
            <a><button class="disabled btn btn-success">Primero</button></a>
          <% } else { %>
            <a href="/sounds/?page=1"><button class="btn btn-success">Primero</button></a>
          <% } %>

          
          <% let i = (Number(current) > 5 ? Number(current) - 4 : 1) %>


          <!--Botón anterior: Activo se a páxina actual é maior ca 1. Usamos parseInt por si acaso, en Botón seguinte toma current coma string-->
          <% if (current == 1) { %>
            <a><button class="disabled btn btn-success"><i class="bi bi-arrow-left"></i></button></a>
          <% } else { %>
            <a href="/sounds/?page=<%= parseInt(current) -1 %>"><button class="btn btn-success"><i class="bi bi-arrow-left"></i></button></a>
          <% } %>


          <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
              <% if (i == current) { %>
                  <a><button class="disabled btn btn-success"><%= i %></button></a>
              <% } else { %>
                  <a href="/sounds/?page=<%= i %>"><button class="btn btn-success"><%= i %></button></a>
              <% } %>
          <% } %>



          <!--Botón seguinte: Activo se a páxina actual é menor ca última. Neste caso toma current como string, polo que hai que usar parseInt-->
          <% if (current == pages) { %>
            <a><button class="disabled btn btn-success"><i class="bi bi-arrow-right"></i></button></a>
          <% } else { %>
            <a href="/sounds/?page=<%= parseInt(current) + 1 %>"><button class="btn btn-success"><i class="bi bi-arrow-right"></i></button></a>
          <% } %>


          
          <!--Botón último: Activo se a páxina actual é menos ca última-->
          <% if (current == pages) { %>
            <a><button class=" disabled btn btn-success">Último</button></a>
          <% } else { %>
            <a href="/sounds/?page=<%= pages %>"><button class="btn btn-success">Último</button></a>
          <% } %>
        </div>
      </div>
    <% } %>
</div>