<% layout("layouts/boilerplate") %> 
<h1><%= sound.name %></h1>
<ul>
    <li><%= sound.minFrec %> Hz</li>
    <li><%= sound.maxFrec %> Hz</li>
    <li><%= sound.minInt %> dB</li>
    <li><%= sound.maxInt %> dB</li>
    <li>
        <% function capitalizeFirstLetter(string) { %>
        <%    return string.charAt(0).toUpperCase() + string.slice(1); %>
        <%  } %>
        <%= capitalizeFirstLetter(sound.category) %>
    </li>
</ul>

<form action="/sounds/show/<%= sound._id %>?_method=DELETE" method="POST">
    <button type="submit">Eliminar</button>
</form>

