<% layout("layouts/boilerplate") %>
  <h2 class="text-center mb-4">
    <%= soundCategory %>
  </h2>
  <div class="row row-cols-auto justify-content-center align-items-center  py-lg-5 mb-lg-5">
    <!--Loop para ver cards de todos os sons da categorÃ­a-->
    <% for(let sound of sounds) { %>
      <div class="col">
        <div class="card mb-3 text-center" style="width: 11.5rem">
          <img src="<%= sound.image.url %>" class="card-img-top" crossorigin="anonymous"
            alt="Foto de: <%= sound.name %>">
          <div class="card-bodypx-1 py-3">
            <h5 class="card-title fs-5">
              <%= sound.name %>
            </h5>
            <a href="/sounds/categories/<%=sound.category%>/<%= sound._id %>" class="btn btn-dark">Ver datos</a>
          </div>
        </div>
      </div>
      <% } %>
  </div>