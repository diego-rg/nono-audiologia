<% layout("layouts/boilerplate") %>
    <section class="m-auto">
        <h2 class="mb-4 text-center">Introduce tus datos de usuario</h2>

        <form action="/login" method="POST" novalidate class="validated-form">
            <!--Para non usar validador estándar e usar o de bootstrap. Require función js-->
            <div class="row g-2 mb-3">
                <label for="name" class="col-sm-4 col-form-label">Usuario:</label>
                <div class="col-sm-8">
                    <input type="text" id="username" placeholder="Usuario" name="username" class="form-control"
                        required>
                </div>
            </div>

            <div class="row g-2 mb-3">
                <label for="password" class="col-sm-4 col-form-label">Contraseña:</label>
                <div class="col-sm-8">
                    <input type="password" id="password" placeholder="**********" name="password" class="form-control"
                        required>
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-evenly p-3">
                <button type="submit" class="btn btn-dark">Conectar</button>
                <button type="reset" class="btn btn-dark">Limpiar</button>
            </div>
        </form>

        <!--GoogleOauth-->
        <div class="d-flex align-items-center justify-content-center">
            <a href="/auth/google">
                <button type="submit"
                    class="btn btn-dark btn-google d-flex align-items-center justify-content-center p-0">
                    <div class="google--logo"></div>
                    <div class="google--text-container px-3">Únete con Google</div>
                </button>
            </a>
        </div>
    </section>