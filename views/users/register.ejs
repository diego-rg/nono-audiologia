<% layout("layouts/boilerplate") %>
<section class="m-auto">
    <h2 class="mb-4 text-center">Introduce tus datos</h2>

    <form action="/register" method="POST" novalidate class="validated-form"><!--Para non usar validador estándar e usar o de bootstrap. Require función js-->
        <div class="row g-2 mb-3">
            <label for="name" class="col-sm-4 col-form-label">Usuario:</label>
            <div class="col-sm-8">
                <input type="text" id="username" placeholder="Usuario" name="username" class="form-control" required>
            </div>
        </div>

        <div class="row g-2 mb-3">
            <label for="email" class="col-sm-4 col-form-label">Email:</label>
            <div class="col-sm-8">
                <input type="email" id="email" placeholder="tucorreo@correo.es" name="email" class="form-control" required>
            </div>
        </div>

        <div class="row g-2 mb-3">
            <label for="password" class="col-sm-4 col-form-label">Contraseña:</label>
            <div class="col-sm-8">
                <input type="password" id="password" placeholder="**********" name="password" class="form-control" required>
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-evenly">
            <button type="submit" class="btn btn-success">Registro</button>
            <button type="reset" class="btn btn-success">Limpiar</button>
        </div>
    </form>

</section>