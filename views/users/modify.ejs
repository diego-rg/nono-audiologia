<% layout("layouts/boilerplate") %>
    <section class="m-auto user-container">
        <h2 class="mb-4 text-center">Bienvenido <%= userName %>
        </h2>
        <h2 class="m-4 text-center">Cambiar contraseña</h2>

        <form action="/modify" method="POST" novalidate class="validated-form">
            <!--Para non usar validador estándar e usar o de bootstrap. Require función js-->
            <div class="row g-2 mb-3">
                <label for="password" class="col-sm-6 col-form-label">Contraseña actual:</label>
                <div class="col-sm-6">
                    <input type="password" id="oldPassword" placeholder="**********" name="oldPassword"
                        class="form-control" required>
                </div>
            </div>

            <div class="row g-2 mb-3">
                <label for="password" class="col-sm-6 col-form-label">Nueva contraseña:</label>
                <div class="col-sm-6">
                    <input type="password" id="newPassword" placeholder="**********" name="newPassword"
                        class="form-control" required>
                </div>
            </div>

            <div class="d-flex align-items-center justify-content-between py-3">
                <button type="submit" class="btn btn-dark">Guardar</button>
                <button type="reset" class="btn btn-dark">Limpiar</button>
            </div>
        </form>

    </section>